<div class="store-filter clearfix">
    <!-- Pull left fot sorting Logic products  -->
    <div class="pull-left">
        <div class="row-filter">
            <a href="#"><i class="fa fa-th-large"></i></a>
            <a href="#" class="active"><i class="fa fa-bars"></i></a>
        </div>
        <div class="sort-filter">
            <span class="text-uppercase">Sort By:</span>
            <select class="input">
                    <option value="0">Position</option>
                    <option value="0">Price</option>
                    <option value="0">Rating</option>
                </select>
            <a href="#" class="main-btn icon-btn"><i class="fa fa-arrow-down"></i></a>
        </div>
    </div>
    <!-- Pull Right for Pagination Logic  -->
    <div class="pull-right">
        <div class="page-filter">
            <span class="text-uppercase">Show:</span>
            <!-- <form action="/page=1-limit=<%=limit%>" method="GET" > -->
                <select class="input" id="show" onchange=" document.location.href = '/page=1-limit=' + this.value">
                    <% if (limit == 10){ %>
                        <option value="10" selected >10</option>
                        <option value="20" >20</option>
                        <option value="30" >30</option>
                    <% }else if (limit ==20){ %>
                        <option value="10" >10</option>
                        <option value="20" selected >20</option>
                        <option value="30" >30</option>
                    <%} else if (limit ==30) {%> 
                        <option value="10" >10</option>
                        <option value="20" >20</option>
                        <option value="30"selected >30</option>
                    <% } %>
                </select>
                <!-- <input type="submit" value="submit"> -->
            <!-- </form> -->
        </div>

        <ul class="store-pages">
            <li><span class="text-uppercase">Page:</span></li>
            
            <% for (var i =1; i <= pages;  i++ ) { %>
                <li><a href="/page=<%=i%>-limit=<%=limit%>"><%=i%></a></li>
            <% } %>

            <!-- <li class="active" href="/<%=page%>-1">1</li>
            <li><a href="/<%=page%>-2">2</a></li>
            <li><a href="/<%=page%>-3">3</a></li>
            <li><a href="/<%=page%>-4">4</a></li> -->

            <!-- small arrrow -->
            <li><a href="#"><i class="fa fa-caret-right"></i></a></li>
        </ul>
    </div>
</div>